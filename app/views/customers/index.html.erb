<div class="row">
  <div class="col-lg-12">
    <h1>顧客情報一覧</h1>
     <table class="table table-striped">
      <thead>
        <th>姓</th>
        <th>名</th>
        <th>電子メール</th>
        <th>リンク</th>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.family_name %></td>
            <td><%= customer.given_name %></td>
            <td><%= customer.email %></td>
            <td><%= link_to '詳細', customer, class: "btn btn-default btn-xs" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
