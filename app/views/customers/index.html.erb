<div class="row">
  <div class="col-lg-12">
    <h1>顧客情報一覧</h1>
    <%= search_form_for @q do |f| %>
      <div class="row">
        <div class="col-sm-1">
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <%= f.label :family_name, "姓" %>
            <%= f.search_field :family_name_cont %>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <%= f.label :given_name, "名" %>
            <%= f.search_field :given_name_cont %>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <%= f.label :company_name, "会社名" %>
            <%= f.search_field :company_name_cont %>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <%= f.label :email, "電子メール" %>
            <%= f.search_field :email_cont %>
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <%= f.label :comments_body, "コメント" %>
            <%= f.search_field :comments_body_cont %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 text-center">
          <%= f.submit "検索", class: "btn btn-default"%>
        </div>
      </div>
    <% end %>
     <table class="table table-striped">
      <thead>
        <th><%= sort_link(@q, :family_name, '姓') %></th>
        <th><%= sort_link(@q, :given_name, '名') %></th>
        <th><%= sort_link(@q, :company_name, '会社名') %></th>
        <th><%= sort_link(@q, :email, '電子メール') %></th>
        <th><%= sort_link(@q, :comments, 'コメント数') %></th>
        <th>リンク</th>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.family_name %></td>
            <td><%= customer.given_name %></td>
            <td><%= customer.company.name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.comments.count %></td>
            <td><%= link_to '詳細', customer, class: "btn btn-default btn-xs" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= paginate @customers %>
